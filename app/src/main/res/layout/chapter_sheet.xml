<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/markSingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_read"
        android:gravity="center"
        android:padding="6dp"
        android:text="Mark as read" />

    <TextView
        android:id="@+id/markManyRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_read"
        android:gravity="center"
        android:padding="6dp"
        android:text="Mark all below as read" />

    <TextView
        android:id="@+id/markManyUnread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_read"
        android:gravity="center"
        android:padding="6dp"
        android:text="Mark all below as unread" />
</LinearLayout>